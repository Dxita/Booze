<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.ProductsActivity">

    <LinearLayout
        android:id="@+id/topview"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="12sp"

            android:textAllCaps="true"
            android:fontFamily="@font/calibri"
            android:layout_weight="1"
            android:id="@+id/addressId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_keyboard_backspace_black_24dp"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:text="Products"/>


        <ImageView
            android:id="@+id/searchView"
            android:src="@drawable/ic_search_black_24dp"
            android:tint="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/myprofileId"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15sp"/>


        <ImageView
            android:id="@+id/cart"
            android:src="@drawable/ic_shopping_cart_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="12dp"/>


    </LinearLayout>


    <TextView
        android:layout_marginTop="05sp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/filter"
        android:fontFamily="@font/calibri"
        android:padding="10sp"
        android:gravity="right"
        android:drawableRight="@drawable/ic_filter_list_black_24dp"
        android:text="Filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/topview"
        android:layout_marginTop="5dp"
        app:contentPadding="0dp"
        android:elevation="20dp"
        app:cardMaxElevation="30dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/productImageId"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/one"/>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"/>

                <LinearLayout
                    android:paddingLeft="3dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/calibri"
                            android:textColor="@color/black"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kingfisher Strong 650 ML"
                            android:textStyle="bold"
                            android:textSize="15dp"/>

                    </LinearLayout>

                    <TextView
                        android:visibility="gone"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
android:layout_marginTop="03sp"                            android:fontFamily="@font/calibri"
                            android:textColor="@color/black"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="Rs 140"
                            android:textSize="13dp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5.0dip"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5.0dip"
                            android:layout_below="@+id/img_btn_close"
                            android:layout_marginRight="5.0dip"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:padding="3.0dip"
                                android:src="@drawable/ic_remove_circle_outline_black_24dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:text="1"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_alignParentTop="true"
                                android:layout_toLeftOf="@+id/tv_counter"
                                android:gravity="center_horizontal"
                                android:padding="3.0dip"
                                android:src="@drawable/ic_add_circle_outline_black_24dp" />


                        </LinearLayout>

                        <Button
                            android:textStyle="bold"
                            android:fontFamily="@font/calibri"
                            android:layout_marginRight="10dp"
                            android:padding="2dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/golden"
                            android:text="add"
                            android:textSize="11dp"
                            android:textColor="@color/white"/>



                    </LinearLayout>





                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/ic_launcher">

                <TextView
                    android:text="20%"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/topview"
        android:layout_marginTop="5dp"
        app:contentPadding="0dp"
        android:elevation="20dp"
        app:cardMaxElevation="30dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/two"/>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"/>

                <LinearLayout
                    android:paddingLeft="3dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/calibri"
                            android:textColor="@color/black"
                            android:paddingLeft="10dp"
                            android:id="@+id/productNameId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kingfisher Strong 330 ML"
                            android:textStyle="bold"
                            android:textSize="15dp"/>

                    </LinearLayout>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/typeTxt"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="03sp"                            android:fontFamily="@font/calibri"
                            android:textColor="@color/black"
                            android:paddingLeft="10dp"
                            android:id="@+id/regularPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="Rs 80"
                            android:textSize="13dp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:id="@+id/layout_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5.0dip"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5.0dip"
                            android:layout_below="@+id/img_btn_close"
                            android:layout_marginRight="5.0dip"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_minus"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:padding="3.0dip"
                                android:src="@drawable/ic_remove_circle_outline_black_24dp" />

                            <TextView
                                android:id="@+id/tv_counter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:text="1"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/img_plus"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_alignParentTop="true"
                                android:layout_toLeftOf="@+id/tv_counter"
                                android:gravity="center_horizontal"
                                android:padding="3.0dip"
                                android:src="@drawable/ic_add_circle_outline_black_24dp" />


                        </LinearLayout>

                        <Button
                            android:textStyle="bold"
                            android:fontFamily="@font/calibri"
                            android:layout_marginRight="10dp"
                            android:id="@+id/addcart"
                            android:padding="2dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/golden"
                            android:text="add"
                            android:textSize="11dp"
                            android:textColor="@color/white"/>



                    </LinearLayout>





                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/offerLayout"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/ic_launcher">

                <TextView
                    android:text="20%"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>