<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.ProductsActivity">

    <LinearLayout
        android:id="@+id/topview"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="12sp"
            android:textAllCaps="true"
            android:fontFamily="@font/calibri"
            android:layout_weight="1"
            android:id="@+id/addressId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_keyboard_backspace_black_24dp"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:text="Products"/>


        <ImageView
            android:id="@+id/searchView"
            android:src="@drawable/ic_search_black_24dp"
            android:tint="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/myprofileId"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15sp"/>


        <ImageView
            android:id="@+id/cart"
            android:src="@drawable/ic_shopping_cart_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="12dp"/>


    </LinearLayout>



    <TextView
        android:layout_below="@+id/topview"
        android:layout_marginTop="05sp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/filter"
        android:fontFamily="@font/calibri"
        android:padding="10sp"
        android:gravity="right"
        android:drawableRight="@drawable/ic_filter_list_black_24dp"
        android:text="Filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <ProgressBar
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ProgressBar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_below="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/cart_bottom_sheet_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/include_view_cart_bottom_sheet_layout"/>
    </LinearLayout>


</RelativeLayout>