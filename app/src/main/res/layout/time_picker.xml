<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <TextView
        android:visibility="gone"
        android:id="@+id/time_txt"
        android:fontFamily="@font/calibri"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Please select your pickup timer"
        android:padding="10sp"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TimePicker

        android:id="@+id/simpleTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/golden"
        android:padding="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:timePickerMode="spinner" />

    <TextView
        android:fontFamily="@font/calibri"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Please select your pickup time"
        android:padding="10sp"
        android:layout_marginBottom="10sp"
        android:textSize="14sp"
        android:textStyle="bold" />

<EditText
    android:background="@drawable/stroke"
    android:id="@+id/edtx"
    android:gravity="left"
    android:padding="10sp"
    android:hint="Add your comment/note here.."
    android:singleLine="true"
    android:textSize="14sp"
    android:fontFamily="@font/calibri"
    android:layout_marginRight="15sp"
    android:layout_marginLeft="15sp"
    android:layout_below="@id/simpleTimePicker"
    android:layout_width="match_parent"
    android:layout_height="110sp"></EditText>
    <Button
        android:layout_marginBottom="10sp"
        android:layout_marginTop="20sp"
        android:background="@color/golden"
        android:fontFamily="@font/calibri"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        android:id="@+id/Submit"
        android:layout_below="@+id/edtx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>
</RelativeLayout>
