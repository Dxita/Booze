<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.PendinguserFragment">

   <androidx.cardview.widget.CardView
       android:layout_marginTop="10sp"
       android:layout_marginRight="10sp"
       android:layout_marginLeft="10sp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_marginBottom="10sp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
       <TextView
           android:layout_weight="1"
           android:padding="10sp"
           android:text="Old Monk 180ML X 3 "
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"></TextView>

               <TextView
                   android:padding="10sp"
                   android:text="Rs.180/- "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"></TextView>

           </LinearLayout>
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
       <TextView
           android:layout_weight="1"
           android:padding="10sp"
           android:text="Tuborg X 3"
           android:layout_width="0dp"
           android:layout_height="wrap_content"></TextView>

               <TextView
                   android:padding="10sp"
                   android:text="Rs.180/- "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"></TextView>
           </LinearLayout>

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_weight="1"
                   android:padding="10sp"
                   android:text="Bira X 4"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"></TextView>

               <TextView
                   android:padding="10sp"
                   android:text="Rs.180/- "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"></TextView>
           </LinearLayout>

           <View
               android:background="@color/colorAccent"
               android:layout_width="match_parent"
               android:layout_height="0.8dp"></View>
           <TextView

               android:layout_gravity="right"
               android:textStyle="bold"
               android:padding="10sp"
               android:text="Rs.180/- "
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"></TextView>

           <LinearLayout
               android:layout_marginTop="08sp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <Button
                   android:layout_marginLeft="10sp"
                   android:layout_marginRight="10sp"
                   android:textColor="@color/white"
                   android:text="Confirm"
                   android:background="@color/green"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:textSize="12sp"
                   android:layout_height="40dp"></Button>

               <Button
                   android:layout_marginRight="10sp"
                   android:layout_marginLeft="10sp"
                   android:background="@color/red"
                   android:textColor="@color/white"
                   android:text="Reject"
                   android:textSize="12sp"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="40dp"></Button>
           </LinearLayout>
       </LinearLayout>


   </androidx.cardview.widget.CardView>

</LinearLayout>